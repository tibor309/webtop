#!/usr/bin/with-contenv bash

# fixes for gnome
for file in $(find /usr -type f -iname "*login1*"); do rm -v $file; done
echo -e "\n\nexport $(dbus-launch)\nexport XDG_CURRENT_DESKTOP=zorin:GNOME\nexport XDG_DATA_DIRS=/usr/local/share:/usr/share\nexport XDG_SESSION_TYPE=x11\nexport DESKTOP_SESSION=zorin-xorg\nGNOME_SHELL_SESSION_MODE=zorin" >> /etc/profile

# start dbus
service dbus start
